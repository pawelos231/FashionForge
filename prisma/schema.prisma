// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Role {
  ADMIN
  USER
  MODERATOR
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  photoLink String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  role      Role     @default(USER)

  comments Comment[]
  projects Project[]

  @@index([email])
}

model Simple {
  id   Int    @id @default(autoincrement())
  data String
}

model Comment {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updateAt  DateTime  @updatedAt
  content   String
  User      User?     @relation(fields: [userId], references: [id])
  userId    Int?
  Project   Project[]

  @@index([userId])
}

model Project {
  id        Int      @id @default(autoincrement())
  upVotes   Int
  DownVotes Int
  auhor     User     @relation(fields: [userId], references: [id])
  userId    Int
  blobLink  String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  comments  Comment  @relation(fields: [commentId], references: [id])
  commentId Int

  @@index([userId])
  @@index([commentId])
}
