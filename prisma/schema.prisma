// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  photoLink String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  projects Project[]

  @@index([email])
}

model Simple {
  id   Int    @id @default(autoincrement())
  data String
}

model Project {
  id        Int      @id @default(autoincrement())
  upVotes   Int
  DownVotes Int
  auhor     User     @relation(fields: [userId], references: [id])
  userId    Int
  blobLink  String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  @@index([userId])
}
