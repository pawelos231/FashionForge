generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VoteType {
  UP
  DOWN
}

enum Role {
  ADMIN
  USER
  MODERATOR
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  photoLink String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  role      Role     @default(USER)

  comments      Comment[]
  posts         Post[]
  commentsLikes CommentVote[]
  postLikes     PostVote[]

  @@index([email])
}

model Simple {
  id   Int    @id @default(autoincrement())
  data String
}

model Comment {
  id       Int           @id @default(autoincrement())
  user     User          @relation(fields: [userId], references: [id])
  post     Post          @relation(fields: [postId], references: [id])
  parent   Comment?      @relation("ParentChild", fields: [parentId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  children Comment[]     @relation("ParentChild")
  likes    CommentVote[]

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  content   String
  userId    Int
  postId    Int
  parentId  Int?

  @@index([userId])
  @@index([postId])
}

model CommentVote {
  user      User     @relation(fields: [userId], references: [id])
  comment   Comment  @relation(fields: [commentId], references: [id])
  userId    Int
  commentId Int
  type      VoteType

  @@id([commentId, userId])
}

model PostVote {
  user   User @relation(fields: [userId], references: [id])
  post   Post @relation(fields: [postId], references: [id])
  userId Int
  postId Int

  @@id([postId, userId])
}

model Post {
  id    Int  @id @default(autoincrement())
  auhor User @relation(fields: [userId], references: [id])

  upVotes   Int
  DownVotes Int
  userId    Int
  blobLink  String
  createdAt DateTime  @default(now())
  updateAt  DateTime  @updatedAt
  comments  Comment[]
  commentId Int

  content  String
  PostLike PostVote[]

  @@index([userId])
  @@index([commentId])
}
